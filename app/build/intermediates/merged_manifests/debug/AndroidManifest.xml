<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fgomes.cgd"
    android:versionCode="6"
    android:versionName="6.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="33" />

    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.fgomes.cgd.activities.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.fgomes.cgd.activities.CadastroGrupoActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_cadastro_grupo"
            android:noHistory="true" />
        <activity
            android:name="br.com.fgomes.cgd.activities.GrupoInicioActivity"
            android:excludeFromRecents="true"
            android:noHistory="true" />
        <activity
            android:name="br.com.fgomes.cgd.activities.CadastroJogadorActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_cadastro_jogador" />
        <activity
            android:name="br.com.fgomes.cgd.activities.EsqueciSenhaGrupoActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_esqueci_senha_grupo"
            android:noHistory="true" />
        <activity
            android:name="br.com.fgomes.cgd.activities.ConsultaJogadorActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_consulta_jogador"
            android:noHistory="true" />
        <activity
            android:name="br.com.fgomes.cgd.activities.RemoverPontoActivity"
            android:label="@string/title_activity_remover_ponto" />
        <activity
            android:name="br.com.fgomes.cgd.activities.ConsultaPontoJogadorActivity"
            android:label="@string/title_activity_consulta_ponto_jogador" />
        <activity
            android:name="br.com.fgomes.cgd.activities.ConsultarPontosDiaActivity"
            android:label="@string/title_activity_consultar_pontos_dia" />
        <activity
            android:name="br.com.fgomes.cgd.activities.GraficoPontosDiaActivity"
            android:label="@string/title_activity_grafico_pontos_dia" />
        <activity
            android:name="br.com.fgomes.cgd.activities.PartidasMesActivity"
            android:label="@string/title_activity_partidas_mes" />
        <activity
            android:name="br.com.fgomes.cgd.activities.MarcarPontoActivity"
            android:label="@string/title_activity_point" />
        <activity
            android:name="br.com.fgomes.cgd.activities.PontosDiaActivity"
            android:label="@string/title_activity_pontos_perido" />
        <activity
            android:name="br.com.fgomes.cgd.activities.WinnersActivity"
            android:label="@string/winners" />
        <activity
            android:name="br.com.fgomes.cgd.activities.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="androidx.compose.ui.tooling.PreviewActivity"
            android:exported="true" />

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <activity
            android:name="androidx.activity.ComponentActivity"
            android:exported="true" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="br.com.fgomes.cgd.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>